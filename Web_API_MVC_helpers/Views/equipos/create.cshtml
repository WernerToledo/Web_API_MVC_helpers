@model Web_API_MVC_helpers.Models.marcas
@{
}
<h1>Mantenimiento de marcas</h1>
<form asp-action="CrearEquipo">
     <div class="form-group row mb-4">
         <div class="col sm-2">
             <label>Nombre</label>
         </div>
        <div class="col sm-4">
            @Html.TextBox("nombre", "", new{@class = "form-control", @placeHolder = "Ingrese su nombre"})
        </div>
        <div class="col sm-2">
            <!--Name, lo que habra dentro del control, las clases-->
            @Html.Label("lbldescrip", "Descripción")
         </div>
        <div class="col sm-4">
            @Html.TextBox("descripcion", "", new{@class = "form-control", @placeHolder = "Ingrese la descripcion"})
        </div>

        <!--crear una jcombo con datos de la base de datos-->
        <div class="col sm-4">
            @Html.DropDownList("tipo_equipo_id", ViewData["tipo_equipo"]as SelectList, "Seleccione una equipo", new{@class = "form-control"})
        </div>
        
        
    </div>
    <div class="form-group row mb-4">
        <div class="col sm-4">
            @Html.DropDownList("marca_id", ViewData["Marcas"]as SelectList, "Seleccione una marca", new{@class = "form-control"})
        </div>
        <!--crear una jcombo con datos de la base de datos-->
        <div class="col sm-2">
            <label>modelo</label>
        </div>
        <div class="col sm-4">
            @Html.TextBox("modelo", "", new{@class = "form-control", @placeHolder = "Ingrese el modelo"})
        </div>
        <div class="col sm-2">
            <label>año compra</label>
        </div>
        <div class="col sm-4">
            @Html.TextBox("anio_compra", "", new{@class = "form-control", @placeHolder = "Ingrese el año de compra"})
        </div>

    </div>
    <div class="form-group row mb-4">
        <div class="col sm-2">
            <label>Costo</label>
        </div>
        <div class="col sm-4">
            @Html.TextBox("Costo", "", new{@class = "form-control", @placeHolder = "Ingrese el costo"})
        </div>
        <div class="col sm-2">
            <label>vida util</label>
        </div>
        <div class="col sm-4">
            @Html.TextBox("vida_util", "", new{@class = "form-control", @placeHolder = "Ingrese la vida util"})
        </div>
        <div class="col sm-4">
            @Html.DropDownList("estado_equipo_id", ViewData["estado_equipo"]as SelectList, "Seleccione el estado", new{@class = "form-control"})
        </div>
        <div class="col sm-2">
            <label>Estado</label>
        </div>
        <div class="col sm-4">
            @Html.TextBox("estado", "", new{@class = "form-control", @placeHolder = "Ingrese el estado"})
        </div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <input type="submit" , class="btn btn-success" value="Guardar">   
        </div>    
    </div>
</form>
